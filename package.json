{
  "name": "bookbazaar",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:init": "curl -X POST $NEXT_PUBLIC_APP_URL/api/init || echo 'Database initialization endpoint not available'",
    "db:health": "curl $NEXT_PUBLIC_APP_URL/api/health || echo 'Health check endpoint not available'",
    "postbuild": "echo 'Build completed successfully. Remember to initialize database in production.'",
    "deploy:vercel": "vercel --prod",
    "deploy:check": "npm run db:health && echo 'Deployment verification complete'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "pg": "^8.11.3",
    "@types/pg": "^8.11.6",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "js-cookie": "^3.0.5",
    "@types/js-cookie": "^3.0.6"
  },
  "devDependencies": {
    "typescript": "5.5.3",
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "tailwindcss": "3.4.7",
    "postcss": "8.4.40",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
